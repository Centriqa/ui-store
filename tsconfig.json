{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": false,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "outDir": "./lib/",
        "sourceMap": false,
        "declaration": true,
        "lib": ["es2015", "dom"]
    },
    "exclude": [
        "node_modules",
        "test",
        "lib",
        "dist",        
        ".build"
    ]    
}